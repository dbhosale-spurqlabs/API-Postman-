{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["participants"],
  "properties": {
    "participants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "firstName", "lastName", "email"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      }
    }
  }
}
