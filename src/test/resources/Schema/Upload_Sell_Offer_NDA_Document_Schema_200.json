{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "oneOf": [
    {
      "required": ["id", "name", "type", "size", "uploadedAt", "uploadedBy", "lastModifiedAt"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "size": {
          "type": "number"
        },
        "uploadedAt": {
          "type": "string",
          "format": "date-time"
        },
        "uploadedBy": {
          "type": "object",
          "required": ["id", "firstName", "lastName", "email"],
          "properties": {
            "id": {
              "type": "string",
              "format": "uuid"
            },
            "firstName": {
              "type": "string"
            },
            "lastName": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            }
          }
        },
        "lastModifiedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    {
      "required": ["error", "message"],
      "properties": {
        "error": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        },
        "status": {
          "type": "integer"
        },
        "path": {
          "type": "string"
        }
      }
    }
  ]
}
