{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": { "type": "string" },
    "shortDescription": { "type": "string" },
    "longDescription": { "type": "string" },
    "timestamp": { "type": "string" },
    "success": { "type": "string" },
    "success_message": { "type": "string" },
    "data": {
      "type": "object",
      "properties": {
        "id": { 
          "type": "string",
          "format": "uuid"
        },
        "circling_date": { 
          "type": ["string", "null"],
          "format": "date-time"
        },
        "updated_at": { 
          "type": "string",
          "format": "date-time"
        },
        "updated_by": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "format": "uuid"
            },
            "first_name": {
              "type": "string"
            },
            "last_name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            }
          },
          "required": ["id", "first_name", "last_name", "email"]
        },
        "message": { "type": "string" }
      },
      "required": ["id", "message"]
    }
  },
  "required": ["type", "data"]
}
