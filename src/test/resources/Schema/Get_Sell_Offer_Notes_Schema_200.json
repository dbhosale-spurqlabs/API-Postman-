{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "content", "isPinned", "createdAt", "createdBy", "updatedAt"],
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid"
      },
      "content": {
        "type": "string"
      },
      "isPinned": {
        "type": "boolean"
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      },
      "createdBy": {
        "type": "object",
        "required": ["id", "firstName", "lastName", "email"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      },
      "updatedAt": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}
